% \set[condition]{set}
\newcommand\set[2][]
{
    \ifthenelse{\isempty{#1}}
    {
        \left\{#2\right\}
    }
    {
        \left\{#2\left|\,#1\right.\right\}
    }
}
\newcommand\fset[2][]
{
    \ifthenelse{\isempty{#1}}
    {
        \left\{#2\right\}
    }
    {
        \left\{\left.#2\right|\,#1\right\}
    }
}

% \diff[function]{variable}{degree}
\newcommand\diff[3][]
{
    \ifthenelse{\isempty{#3}}
    {
        \dfrac{d#1}{d#2}
    }
    {
        \dfrac{d^{#3}#1}{d{#2}^{#3}}
    }
}

% \pdiff[degree]{function}{variable}
\newcommand\pdiff[3][]
{
    %\dfrac{\partial^{#3}#1}{\partial{#2}^{#3}}
    \dfrac{\partial^{#1}{#2}}{\partial{#3}^{#1}}
}

